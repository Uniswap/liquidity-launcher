pragma solidity 0.8.26;

import {BaseStrategyFactory} from "../BaseStrategyFactory.sol";

/// @title MerkleClaimFactory
/// @notice Factory for the MerkleClaim contract
/// @custom:security-contact security@uniswap.org
contract MerkleClaimFactory is BaseStrategyFactory {
    /// @notice The creation code for the MerkleClaim contract
    /// @dev This is a workaround since the contract is pinned to 0.8.17
    bytes public constant MERKLE_CLAIM_CREATION_CODE =
        hex"";

    /// @inheritdoc BaseStrategyFactory
    function _validateParamsAndReturnDeployedBytecode(address token, uint256, bytes calldata configData)
        internal
        pure
        override
        returns (bytes memory deployedBytecode)
    {
        (bytes32 merkleRoot, address owner, uint256 endTime) = abi.decode(configData, (bytes32, address, uint256));
        deployedBytecode = abi.encodePacked(MERKLE_CLAIM_CREATION_CODE, abi.encode(token, merkleRoot, owner, endTime));
    }
}
